<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/ic_background_dialog_circle">

    <View
        android:layout_width="350dp"
        android:layout_height="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确认传输内容"
        android:layout_marginVertical="8dp"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <MultiAutoCompleteTextView
        android:id="@+id/et_dialog_send_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认传输内容"
        android:maxLines="3"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择目标设备"
        android:layout_marginVertical="8dp"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <ScrollView
        android:id="@+id/sv_dialog_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_dialog_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_dialog_send_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DD2D2D"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_dialog_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="发送" />

</LinearLayout>